<div class="container">
  <div class="header-inner">
    <h1><%= link_to (fa_icon 'laptop').to_s + "Balilis", root_path %></h1>
    <nav role="navigation">
      <ul>
        <% if !current_user %>
            <li class="cta"><%= link_to "Sign up", new_user_registration_path %></li>
            <li class="cta"><%= link_to "Log in", new_user_session_path %></li>
        <% elsif current_user.owner? %>
          <li><%= fa_icon 'user' %> logged in as: <%= link_to current_user.email, edit_user_registration_path %></li>
          <li><%= link_to "My Job Offers", dashboard_path %></li>
          <li class="cta"><%= link_to "Post a Job Offer", new_job_path %></li>
          <li class="cta"><%= link_to (fa_icon 'power-off') + "  Log out", destroy_user_session_path, :method => 'delete' %></li>
        <% else %>
          <li><%= fa_icon 'user' %> logged in as: <%= link_to current_user.email, edit_user_registration_path %></li>
          <li class="cta"><%#= link_to "My Job Applications", job_applications_path unless current_user.admin? %></li>
          <li class="cta"><%= link_to (fa_icon 'power-off') + "  Log out", destroy_user_session_path, :method => 'delete' %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
